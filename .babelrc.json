{
  "babelConfig": {
    "babelrc": false,
    "configFile": false,
    "plugins": [
      "@babel/plugin-proposal-decorators"
    ]
  },
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "node": "current"
        }
      }
    ],
    "@babel/preset-typescript"
  ],
  "plugins": [
    "babel-plugin-transform-import-meta"
  ]
}
